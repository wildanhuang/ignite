<div class="snow-bg">
  <h1 class="display-4 black-bg">
    PENDAFTARAN NATAL PKMB 2019
  </h1>

  <table class="table table-dark">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col">Email</th>
        <th scope="col">Code</th>
      </tr>
    </thead>
    <tbody>
      <% @participants.each.with_index(1) do |participant, index| %>
        <tr>
          <th scope="row"><%= index %></th>
          <td><%= participant.name %></td>
          <td><%= participant.email %></td>
          <td><%= participant.code %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="row">
    <div class="col-md-6">
      <%= form_for @participant, url: christmas_registrations_path, method: :post, :html => { class: "form-horizontal" } do |f| %>
        <% if f.object.errors.any? %>
          <div class="alert alert-danger" role="alert">
            <%= f.object.errors.full_messages.join(", ") %>
          </div>
        <% end %>

        <div class="clearfix"></div>
        <div class="form-group">
          <div class="clearfix"></div>
          <div class="form">
            <%= f.text_field :name, class: 'form-control', autocomplete: 'off', placeholder: 'Fill your name here', disabled: 'disabled', title: 'Pendaftaran sudah ditutup..' %>
          </div>
        </div>

        <div class="form-group">
          <div class="clearfix"></div>
          <div class="form">
            <%= f.text_field :email, class: 'form-control', autocomplete: 'off', placeholder: 'Your email: email@example.com', disabled: 'disabled', title: 'Pendaftaran sudah ditutup..' %>
          </div>
        </div>

        <div class="form-group">
          <div class="clearfix"></div>
          <div class="form">
            <%= f.text_field :line_id, class: 'form-control', autocomplete: 'off', placeholder: 'Your Line ID: pkmbbaitlahim', disabled: 'disabled', title: 'Pendaftaran sudah ditutup..' %>
          </div>
        </div>

        <div class="form-group">
          <div class="clearfix"></div>
          <div class="form">
            <%= f.text_field :phone, class: 'form-control', autocomplete: 'off', placeholder: 'Your whatsapp number: +628991200001', disabled: 'disabled', title: 'Pendaftaran sudah ditutup..' %>
          </div>
        </div>

        <div class="form-group right">
          <div class="col-sm-12">
            <%= f.submit "Register!", :class => "btn btn-primary", disabled: 'disabled', title: 'Pendaftaran sudah ditutup..' %>
          </div>
        </div>
      <% end %>
    </div>
    <div class="col-md-6">
      <%= image_tag 'youth.jpg', class: '', alt: '' %>
    </div>
  </div>
</div>
